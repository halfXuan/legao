.page {
  height: 100vh;
  background-color: #fff;
  position: relative;
}
.page .btn {
  position: absolute;
  width: 90%;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
  background-color: #fce700;
  text-align: center;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 36px;
}
.page .type {
  padding: 25px 20px;
  border-bottom: 15px solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.page .type .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.page .type .left image {
  width: 65px;
  height: 65px;
  margin-right: 30px;
}
.page .type .left .name {
  line-height: 20px;
  color: #333;
  font-size: 16px;
}
.page .type .left .tip {
  line-height: 18px;
  color: #999;
  font-size: 14px;
}
.page .status1 {
  width: 52px;
  height: 28px;
  line-height: 28px;
  border-radius: 14px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #cccccc;
}
.page .status2 {
  width: 52px;
  height: 28px;
  line-height: 28px;
  border-radius: 14px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #cccccc;
  background-color: #f5f5f5;
  color: #ccc;
}
.page .status3 {
  width: 52px;
  height: 26px;
  border-radius: 14px;
  text-align: center;
}
.page .status3 image {
  width: 52px;
  height: 26px;
}

